extends layout

block content
  .container
    h1= title
    .row
      each team in teams
        .col-md-2.card-col
          a(class='card', href=`/tournaments/${tournament}/team/${team.id}`)
            img.card-img-top(src=`/images/${team.id}.png` onerror="imgError(this, 'sr:tournament:default.png')")
            .card-body
              h6.card-text.text-center= `${team.name}`